{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "lib",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "moduleResolution": "node",
    "strict": true,
    "module": "es2015",
    "target": "es2019",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": { "lib/*": ["lib/*"] }
  },
  "include": ["lib/**/*"]
}
